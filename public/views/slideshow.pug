extends layout.pug

prepend styles
    link(rel="stylesheet", href="/styles/slideshow.css")

prepend scripts
    script(src="/scripts/slideshow.js")

block content
    //-CONTENT-STARTS-HERE-//
    .slideshow
        input.slide-plus(type="button", value="+")
        input.slide-minus(type="button", value="-")
        .slide(style="background-color:red;")
        .slide(style="background-color:blue;")
        .slide(style="background-color:green;")
        .slide(style="background-color:yellow;")
        .slide(style="background-color:orange;")


        
